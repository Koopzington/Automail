{
    "root": true,
    "env": {
        "browser": true,
        "es2017": true,
        "greasemonkey": true
    },
    "extends": ["eslint:recommended", "plugin:compat/recommended"],
    "parserOptions": {
        "ecmaVersion": 9
    },
    "rules": {
        "no-unused-vars": "off",
        "no-undef": "off",
        "no-extra-semi": "warn",
        "no-useless-escape": "warn"
    },
    "globals": {
        "DOMPurify": "readonly",
        "localforage": "readonly",
        "showdown": "readonly"
    },
    "settings": {
        "polyfills": [
            "String.prototype.includes",
            "BroadcastChannel",
            "Array.prototype.flat"
        ]
    }
}
